<div id="adminPanel">
  <h3>Admin Panel</h3>
  <label>Name: <input type="text" id="editName"></label>
  <label>Photo URL: <input type="text" id="editPhoto"></label>
  <label>Theme Color: <input type="color" id="editColor"></label>
  <label>Footer Text: <input type="text" id="editFooter"></label>
  <button id="saveChanges">Save</button>
</div>

<footer id="footerText">Made by PREM</footer>

<script>
// Default data
const defaultData = {
  name: "PREM SHARMA",
  photo: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTO6g7hUPkq7G92HHvm7xdV0jtR0txgnCiuEw&s",
  color: "#4a90e2",
  footer: "Made by PREM"
};

let data = JSON.parse(localStorage.getItem("premData")) || defaultData;

// Apply data
function applyData(){
  document.getElementById("profileName").innerText = data.name;
  document.getElementById("profilePhoto").src = data.photo;
  document.documentElement.style.setProperty('--main-color', data.color);
  document.getElementById("footerText").innerText = data.footer;
}
applyData();

// YouTube search
document.getElementById("searchBtn").addEventListener("click",()=>{
  const q = encodeURIComponent(document.getElementById("searchInput").value);
  if(q) window.open(`https://www.youtube.com/results?search_query=${q}`, "_blank");
});

// Voice search
document.getElementById("voiceBtn").addEventListener("click",()=>{
  const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
  recognition.onresult = function(event){
    document.getElementById("searchInput").value = event.results[0][0].transcript;
    window.open(`https://www.youtube.com/results?search_query=${encodeURIComponent(event.results[0][0].transcript)}`, "_blank");
  }
  recognition.start();
});

// Admin login
document.getElementById("loginBtn").addEventListener("click",()=>{
  const user = prompt("Username:");
  const pass = prompt("Password:");
  if(user==="PREM" && pass==="123456"){
    const panel = document.getElementById("adminPanel");
    panel.style.display="block";
    document.getElementById("editName").value = data.name;
    document.getElementById("editPhoto").value = data.photo;
    document.getElementById("editColor").value = data.color;
    document.getElementById("editFooter").value = data.footer;
  } else alert("Wrong credentials");
});

// Save changes
document.getElementById("saveChanges").addEventListener("click", ()=>{
  data.name = document.getElementById("editName").value;
  data.photo = document.getElementById("editPhoto").value;
  data.color = document.getElementById("editColor").value;
  data.footer = document.getElementById("editFooter").value;
  localStorage.setItem("premData", JSON.stringify(data));
  applyData();
  alert("Changes saved!");
});
</script>

</body>
